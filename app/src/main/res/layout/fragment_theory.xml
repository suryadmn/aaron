<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealGridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:columnCount="2"
    android:rowCount="2"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".help">

    <!--Line 1-->
    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="12dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_alif"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <TextView
                android:layout_margin="12dp"
                android:textColor="#6f6f6f"
                android:textSize="18sp"
                android:gravity="center"
                android:text="Teori Huruf"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="12dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_sukun"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <TextView
                android:layout_margin="12dp"
                android:textColor="#6f6f6f"
                android:textSize="18sp"
                android:text="Teori Harakat"
                android:gravity="center"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!--Line 2-->
    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="12dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_arabic"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <TextView
                android:layout_margin="12dp"
                android:textColor="#6f6f6f"
                android:textSize="18sp"
                android:gravity="center"
                android:text="Permulaan dan lanjutan tajwid"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="12dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_pencil"
                android:layout_width="60dp"
                android:layout_height="80dp"/>

            <TextView
                android:layout_margin="12dp"
                android:textColor="#6f6f6f"
                android:textSize="18sp"
                android:text="Latihan"
                android:gravity="center"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</com.google.android.material.circularreveal.CircularRevealGridLayout>